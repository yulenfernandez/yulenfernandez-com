/*----------------------------------------------------------------------------*\
  5-COMPONENTS / LINKS
\*----------------------------------------------------------------------------*/
.c-link {
  padding-bottom: .5rem;
  border-bottom: 2px solid rgba(169, 176, 235, 0.3);
  transition: transform .3s ease-out, color .3s ease-out, border .3s ease-out; }
  .c-link--sm {
    font-size: 1.7rem; }
  .c-link:hover {
    color: #E1E3F7;
    border-bottom: 2px solid #a9b0eb; }
  .c-link--designer {
    border-color: rgba(255, 110, 91, 0.6); }
    .c-link--designer:hover {
      color: #ff6e5b;
      border-color: #ff6e5b; }
  .c-link--developper {
    border-color: rgba(61, 193, 255, 0.6); }
    .c-link--developper:hover {
      color: #3dc1ff;
      border-color: #3dc1ff; }

/*----------------------------------------------------------------------------*\
  6-COMPONENTS / FOOTER
\*----------------------------------------------------------------------------*/
.c-footer {
  font-family: 'Work Sans', Helvetica Neue, Helvetica, Arial, Lucida Grande, sans-serif;
  line-height: 1.5;
  font-weight: 400;
  color: #E1E3F7;
  font-size: 1.7rem;
  color: #FFFFFF; }
  @supports (--css: variables) {
    .c-footer {
      line-height: var(--line-height); } }

