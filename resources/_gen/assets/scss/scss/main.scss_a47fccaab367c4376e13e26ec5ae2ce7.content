/*----------------------------------------------------------------------------*\
  3-GENERIC / RESETS
\*----------------------------------------------------------------------------*/
@media (max-width: 37.4375em) {
  :root {
    --line-height: 1.4; } }

@media (min-width: 37.5em) {
  :root {
    --line-height: 1.4; } }

@media (min-width: 56.25em) {
  :root {
    --line-height: 1.5; } }

@media (min-width: 75em) {
  :root {
    --line-height: 1.5; } }

@media (min-width: 112.5em) {
  :root {
    --line-height: 1.6; } }

html {
  font-size: .625em;
  font-size: calc(1em * .625);
  box-sizing: border-box;
  line-height: 1.5; }
  @supports (--css: variables) {
    html {
      line-height: var(--line-height); } }
  @media (max-width: 37.4375em) {
    html {
      font-size: 56%; } }
  @media (min-width: 37.5em) {
    html {
      font-size: 56%; } }
  @media (min-width: 56.25em) {
    html {
      font-size: 62.5%; } }
  @media (min-width: 75em) {
    html {
      font-size: 62.5%; } }
  @media (min-width: 112.5em) {
    html {
      font-size: 65%; } }

body {
  margin: 0;
  font-size: 1.6em; }

*, *:before, *:after {
  box-sizing: inherit; }

/*----------------------------------------------------------------------------*\
  4-ELEMENTS / TEXTS
\*----------------------------------------------------------------------------*/
h1, p, a {
  margin: 0; }

h1 {
  font-family: 'Work Sans', Helvetica Neue, Helvetica, Arial, Lucida Grande, sans-serif;
  line-height: 1.5;
  font-weight: 400;
  color: #E1E3F7;
  font-weight: 600;
  font-size: 3.8rem;
  margin-bottom: calc(var(--line-height) * 0.5 * 1rem); }
  @supports (--css: variables) {
    h1 {
      line-height: var(--line-height); } }

p {
  font-family: 'Work Sans', Helvetica Neue, Helvetica, Arial, Lucida Grande, sans-serif;
  line-height: 1.5;
  font-weight: 400;
  color: #E1E3F7;
  font-weight: 300;
  font-size: 2.2rem;
  margin-bottom: calc(var(--line-height) * 2.5 * 1rem); }
  @supports (--css: variables) {
    p {
      line-height: var(--line-height); } }

a {
  font-family: 'Work Sans', Helvetica Neue, Helvetica, Arial, Lucida Grande, sans-serif;
  line-height: 1.5;
  font-weight: 400;
  color: #E1E3F7;
  font-weight: 300;
  color: #A9B0EB;
  text-decoration: none;
  font-size: 2rem; }
  @supports (--css: variables) {
    a {
      line-height: var(--line-height); } }

/*----------------------------------------------------------------------------*\
  5-OBJECTS / LAYOUT
\*----------------------------------------------------------------------------*/
.o-site-content {
  width: 100%;
  height: 100vh;
  display: -ms-flexbox;
  display: flex;
  -ms-flex-direction: column;
      flex-direction: column;
  padding: 2.4rem;
  background: #0F0862; }

.o-main {
  height: 91vh;
  display: -ms-flexbox;
